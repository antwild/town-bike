<div class="container">
  <h1>All Bikes</h1>
  <div class="btn btn-yellow2"><%= link_to "Filters", "#" %></div>
  <div class="home-flex">
    <div class="cards-pop">
      <% @bikes.each do |bike| %>
        <%= link_to bike_path(bike), style: "width: 100%" do  %>
          <div class="card-trip">
            <img src="https://images.unsplash.com/photo-1485965120184-e220f721d03e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80">
            <div class="card-trip-infos">
              <div>
                <h2><%= bike.make %></h2>
                <p><%= bike.description %></p>
              </div>
              <h2 class="card-trip-pricing"> <%= "Â£#{bike.price} per day" %></h2>
              <img src='https://kitt.lewagon.com/placeholder/users/krokrob' class="card-trip-user avatar-bordered"/>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="map">
      <%= render 'shared/map' %>
    </div>
  </div>

</div>

















