<h1>bikeform</h1>

<%= simple_form_for(@bike) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.input :make %>
    <%= f.input :model %>
    <%= f.input :color %>
    <%= f.input :bike_type %>
    <%= f.input :frame_size %>
    <%= f.input :foldable %>
    <%= f.input :location %>
    <%= f.input :price %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
