<%= render 'shared/booking_navbar' %>
<div class="min">
  <div class="container">
    <div class="book-date">
      <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
        <h2>Fill up your booking date</h2>
        <div class="date-card">
          <%= simple_form_for(@booking) do |f| %>
            <%= hidden_field_tag :bike_id, @bike_id %>
            <%= f.input :start_date, as: :string, required: false, input_html: {class: "start_date"} %>
            <%= f.input :end_date, as: :string, required: false, input_html: {class: "end_date"} %>
            <%= f.button :submit, "Book date", class: "btn-blue", style: "margin-top: 20px" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


